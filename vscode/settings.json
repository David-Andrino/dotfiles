{
    "window.zoomLevel": 2,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorSurroundingLines": 5,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.fontFamily": "UbuntuMono NF",
    "editor.fontLigatures": true,
    "editor.fontSize": 18,
    "editor.fontWeight": 500,
    "editor.inlineSuggest.enabled": true,
    "editor.smoothScrolling": false,
    "editor.lineNumbers": "on",
    "editor.linkedEditing": true,
    "editor.stickyScroll.enabled": true,
    "editor.suggest.insertMode": "replace",
    "editor.wordWrap": "on",
    "window.menuBarVisibility": "classic",
    "window.titleBarStyle": "custom",
    "vim.foldfix": true,
    "vim.hlsearch": false,
    "git.openRepositoryInParentFolders": "never",
    "workbench.list.automaticKeyboardNavigator": false,
    "editor.cursorBlinking": "solid",
    "editor.minimap.enabled": false,
    "json.format.keepLines": true,

    // =================
    // VIM Configuration
    // =================
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [ "<Tab>" ],
            "commands": [ "workbench.action.nextEditor" ],
            "silent": true
        },
        {
            "before": [ "<S-Tab>" ],
            "commands": [ "workbench.action.previousEditor" ],
            "silent": true
        },
        {
            "before": [ "<C-j>" ],
            "commands": [ "workbench.action.navigateDown" ],
            "silent": true
        },
        {
            "before": [ "<C-h>" ],
            "commands": [ "workbench.action.navigateLeft" ],
            "silent": true
        },
        {
            "before": [ "<C-k>" ],
            "commands": [ "workbench.action.navigateUp" ],
            "silent": true
        },
        {
            "before": [ "<C-l>" ],
            "commands": [ "workbench.action.navigateRight" ],
            "silent": true
        },
        {
            "before": [ "<C-b>" ],
            "commands": [ "workbench.action.toggleSidebarVisibility" ]
        },
        {
            "before": [ " " ],
            "commands": [ "whichkey.show" ],
            "silent": true
        },
        {
            "before": [ "J" ],
            "after": [ "m", "z", "J", "`", "z" ]
        },
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [ "j", "k" ],
            "after": [ "<Esc>" ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": [ "J" ], "commands": [ "editor.action.moveLinesDownAction" ], "silent": true },
        { "before": [ "K" ], "commands": [ "editor.action.moveLinesUpAction" ], "silent": true },
    ],
    "vim.handleKeys": {
        "<C-c>": false,
    },
    // ======================
    // Whichkey Configuration
    // ======================
    "whichkey.bindings": [
        {
            "key": "r",
            "name": "Rename symbol",
            "type": "command",
            "command": "editor.action.rename",
        },
        {
            "key": "q",
            "name": "Close tab",
            "type": "command",
            "command": "workbench.action.closeActiveEditor",
        },
        {
            "key": "w",
            "name": "Toggle line wrapping",
            "type": "command",
            "command": "editor.action.toggleWordWrap",
        },
        {
            "key": "p",
            "name": "Panel",
            "type": "bindings",
            "bindings": [
                {
                    "key": "p",
                    "name": "Toggle panel",
                    "type": "command",
                    "command": "workbench.action.togglePanel"
                },
                {
                    "key": "r",
                    "name": "Problems",
                    "type": "command",
                    "command": "workbench.actions.view.problems",
                },
                {
                    "key": "t",
                    "name": "Terminal",
                    "type": "command",
                    "command": "workbench.action.terminal.focus",
                },
                {
                    "key": "d",
                    "name": "Debug console",
                    "type": "command",
                    "command": "workbench.debug.action.focusRepl",
                },
                {
                    "key": "o",
                    "name": "Output",
                    "type": "command",
                    "command": "workbench.action.output.toggleOutput",
                },
            ]
        },
        {
            "key": "b",
            "name": "Sidebar...",
            "type": "bindings",
            "bindings": [
                {
                    "key": "b",
                    "name": "Toggle sidebar",
                    "type": "command",
                    "command": "workbench.action.toggleSidebarVisibility",
                },
                {
                    "key": "f",
                    "name": "File explorer",
                    "type": "command",
                    "command": "workbench.view.explorer",
                },
                {
                    "key": "e",
                    "name": "File explorer",
                    "type": "command",
                    "command": "workbench.view.explorer",
                },
                {
                    "key": "d",
                    "name": "Debug",
                    "type": "command",
                    "command": "workbench.view.debug",
                },
                {
                    "key": "x",
                    "name": "Extensions",
                    "type": "command",
                    "command": "workbench.view.extensions",
                },
                {
                    "key": "s",
                    "name": "Search",
                    "type": "command",
                    "command": "workbench.view.search",
                },
                {
                    "key": "g",
                    "name": "Git",
                    "type": "command",
                    "command": "workbench.view.scm",
                },
                {
                    "key": "q",
                    "name": "Close sidebar",
                    "type": "command",
                    "command": "workbench.action.closeSidebar",
                },
                {
                    "key": "a",
                    "name": "Toggle activity bar",
                    "type": "command",
                    "command": "workbench.action.toggleActivityBarVisibility",
                },
            ]
        },
        { "key": "f",
            "name": "Find files",
            "type": "command",
            "command": "workbench.action.quickOpen",
        }
    ],
    "workbench.colorTheme": "Catppuccin Mocha",
    "catppuccin.italicComments": false,
    "catppuccin.italicKeywords": false,
    "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, UseTab: Never, IndentWidth: 4, TabWidth: 4 }",
    "C_Cpp.vcFormat.indent.preserveComments": true,
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "sameLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "sameLine",
    "C_Cpp.vcFormat.indent.caseContents": false
}