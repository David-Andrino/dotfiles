[core]
	excludesFile = ~/.config/git/ignore

[user]
	email = davidandrino2002@gmail.com
	name = David Andrino

[alias]
    wdiff = diff --word-diff=color
    amend = commit --amend --no-edit
    l = log --all --graph --pretty="format:'%C(auto)%h %C(white) %an, %ar%C(auto) %D%n%s%n'"

[advice]
    detachedHead = false

[init]
    defaultBranch = main

[status]
    branch = true
    showStash = true
#    showUntrackedFiles = all

[push]
    autoSetupRemote = true
    default = current
    followTags = true

[diff]
    context = 3
    renames = copies
    interHunkContext = 10

[log]
    abbrevCommit = true

